{
  "manifest_version": 3,
  "name": "LinkedIn Outreach Assist",
  "version": "0.1.0",
  "description": "Generates personalised connection notes and JD follow-ups, then inserts them into LinkedIn composers (you click Send).",
  "icons": { "128": "public/icon128.png" },
  "permissions": [],
  "host_permissions": ["https://www.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["dist/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/contentScript.js", "public/icon128.png"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}


